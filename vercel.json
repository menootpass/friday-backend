{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main.py",
            "methods": ["GET", "POST", "OPTIONS"]
        },
        {
            "src": "/(.*)",
            "dest": "backend/main.py",
            "methods": ["GET", "POST", "OPTIONS"]
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 